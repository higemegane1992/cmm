<% provide(:title, "#{@machine.name}号機の編集") %>
<%= form_with(model: @machine, local: true, class: "card mb-3") do |f| %>
  <div class="card-body">
    <div class="form-group">
      <%= f.label "生産ライン", for: "machine"%>
      <%= f.text_field :name, placeholder: "1-1", id: "machine", class: "form-control" %>
    </div>
    <div class="d-flex justify-content-end">
      <%= f.submit "更新", class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>