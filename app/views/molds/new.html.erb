<% provide(:title, "金型の新規登録") %>
<%= form_with(model: [@product, @mold], local: true, class: "card mb-3") do |f| %>
  <div class="card-body">
    <div class="form-group">
      <%= f.label "次型", for: "number"%>
      <%= f.text_field :number, placeholder: "2", id: "number", class: "form-control" %>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to "戻る", :back, class: "btn btn-link" %>
      <%= f.submit "新規登録", class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>